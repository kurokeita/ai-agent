{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*", "bin/**/*"],
	"exclude": ["node_modules"]
}
